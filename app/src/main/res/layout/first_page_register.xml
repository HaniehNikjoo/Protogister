<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".MainActivity" android:orientation="vertical"
        android:id="@+id/first_register_linearlayout_root"
        android:visibility="gone">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:layout_margin="20dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

            <EditText
                    android:id="@+id/first_register_edittext_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="name"/>

            <EditText
                    android:id="@+id/first_register_edittext_family"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="family"/>

            <EditText
                    android:id="@+id/first_register_edittext_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="phone"/>

            <EditText
                    android:id="@+id/first_register_edittext_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="address"/>

            <Button
                    android:id="@+id/first_register_button_next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_button"
                    android:textColor="@color/colorBase"
                    android:layout_marginTop="20dp"
                    android:text="NEXT"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>